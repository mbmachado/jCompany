<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jcompany.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Postal Express</name>
    <description>
        Aplicação do Sistema Postal Express
    </description>
    <author email="barbgluz@gmail.com">
        Gabriele Luz &amp; Mateus Barbosa
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="SplashScreenSpinnerColor" value="#44d9e6" />
    <preference name="StatusBarBackgroundColor" value="#bdbdbd" />
    <preference name="HeaderColor" value="#4dd0e1" />
    <preference name="orientation" value="portrait" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
        <icon density="ldpi" src="res/icon/android/icon.png" />
        <icon density="mdpi" src="res/icon/android/mipmap-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/mipmap-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-headercolor" spec="^1.0.0" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.3" />
</widget>
